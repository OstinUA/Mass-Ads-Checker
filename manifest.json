{
  "manifest_version": 3,
  "name": "Mass Ads.txt Checker",
  "version": "2.1",
  "description": "Check list of domains for ads.txt validity",
  "permissions": ["storage"],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Checker",
    "default_icon": {
      "128": "icons/icon128web.png"
    }
  },
  "icons": {
    "128": "icons/icon128web.png"
  }
}